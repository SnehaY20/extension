{
  "manifest_version": 3,
  "name": "File Upload Extension",
  "version": "1.0.0",
  "description": "Chrome extension for file uploads with stable popup",
  "permissions": ["storage", "activeTab"],
  "host_permissions": ["https://*/*", "http://*/*"],
  "action": {
    "default_popup": "popup.html",
    "default_title": "File Upload Extension"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "icons": {
    "16": "icons/icon16.svg",
    "48": "icons/icon48.svg",
    "128": "icons/icon128.svg"
  },
  "web_accessible_resources": [
    {
      "resources": ["popup.html", "popup.js", "styles.css"],
      "matches": ["<all_urls>"]
    }
  ]
}
